#
#
# # A comma-separated list of node addresses (address[:port]) in the cluster
GALERA_NODES="<%= node['percona']['garb']['nodes'] %>"
#
# # Galera cluster name, should be the same as on the rest of the nodes.
GALERA_GROUP="<%= node['percona']['garb']['group'] %>"
#
# # Optional Galera internal options string (e.g. SSL settings)
# # see http://galeracluster.com/documentation-webpages/galeraparameters.html
<% if node['percona']['garb']['options'] %>
GALERA_OPTIONS="<%= node['percona']['garb']['options'] %>"
<% end %>
#
# # Log file for garbd. Optional, by default logs to syslog
# # Deprecated for CentOS7, use journalctl to query the log for garbd
<% if node['percona']['garb']['log_file'] %>
LOG_FILE="<%= node['percona']['garb']['log_file'] %>"
<% end %>
